{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        /* Language and Environment */
        "lib": ["ES2022", "DOM", "DOM.Iterable"],
        "jsx": "react", // TODO: Egen PR. Bruk react-jsx og fjern all overfl√∏dige imports

        /* Emit */
        "noEmit": true,

        /* Modules */
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "moduleDetection": "force",
        "noUncheckedSideEffectImports": false, // Trenger for import av @navikt/ds-css
        "types": [
            "vite/client",
            "vitest/globals",
            "@testing-library/jest-dom"
        ]
    },
    "include": ["src/frontend"],
    "exclude": ["src/backend"]
}
